<%- include('partials/header') %>

<div class="container mt-5">
  <h1>📥 Messages reçus</h1>

  <% if (messages.length === 0) { %>
    <p class="text-muted">Aucun message reçu.</p>
  <% } else { %>
    <ul class="list-group">
      <% messages.forEach(msg => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= msg.sender_name %></strong> : <%= msg.content.substring(0, 50) %>...
            <br>
            
          </div>
          <a href="/messages/<%= msg.id %>" class="btn btn-sm btn-outline-primary">Voir</a>
          <a href="/messages/reply/<%= msg.sender_id %>" class="btn btn-primary mt-3">
  Répondre à <%= msg.sender_name %>
</a>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <div class="mt-4">
    <a href="/messages/send" class="btn btn-success">✉️ Nouveau message</a>
    
    <a href="/dashboard" class="btn btn-secondary">Retour</a>
  </div>
</div>

<%- include('partials/footer') %>
