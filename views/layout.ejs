<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'HouseSchool' %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="d-flex">
    <!-- 🌟 Sidebar -->
    <nav class="bg-light border-end p-3" style="width: 220px; min-height: 100vh;">
      <h5 class="text-primary">HouseSchool</h5>
      <ul class="nav flex-column mt-4">
        <li class="nav-item">
          <a class="nav-link" href="#">🏠 Nos Services</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">📞 Contactez-nous</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">🧭 Orientations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">📚 Formations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">📝 Révisions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-danger" href="/login">👨‍🏫 Enseignements</a>
        </li>
      </ul>
    </nav>

    <!-- 📄 Main content -->
    <div class="flex-grow-1">
      <!-- 🌐 Navbar -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
          <span class="navbar-text me-auto text-white">
            📞 +213 7 99 90 15 85  &nbsp; | &nbsp; 📧 samir.hamga@gmail.com
          </span>
          <ul class="navbar-nav ms-auto">
            <% if (session && session.userId) { %>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Déconnexion</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Connexion</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/register">Inscription</a>
              </li>
            <% } %>
          </ul>
        </div>
      </nav>

      <!-- 📄 Contenu -->
      <main class="container mt-4">
        <%- body %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
